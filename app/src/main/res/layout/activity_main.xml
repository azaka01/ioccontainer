<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/button_play"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Play Movie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_analytics"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_analytics"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Send Analytics"
        app:layout_constraintTop_toBottomOf="@id/button_play"
        app:layout_constraintBottom_toTopOf="@+id/button_ads"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_ads"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Play Ads"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_analytics" />

</androidx.constraintlayout.widget.ConstraintLayout>